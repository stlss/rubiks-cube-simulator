<Window x:Class="RubiksCubeSimulator.Wpf.App.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewModels="clr-namespace:RubiksCubeSimulator.Wpf.App.ViewModels.Windows"
        xmlns:rubiksCubeControls="clr-namespace:RubiksCubeSimulator.Wpf.UserControls.Views.RubiksCube;assembly=RubiksCubeSimulator.Wpf.UserControls"
        xmlns:buttonControls="clr-namespace:RubiksCubeSimulator.Wpf.UserControls.Views.ButtonGroup;assembly=RubiksCubeSimulator.Wpf.UserControls"
        x:ClassModifier="internal"
        mc:Ignorable="d"
        Title="Rubik's Cube Simulator" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" MinHeight="450" MinWidth="800">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="KeyDown">
            <i:InvokeCommandAction Command="{Binding KeyDownCommand}"
                                   PassEventArgsToCommand="True"/>
        </i:EventTrigger>

        <i:EventTrigger EventName="KeyUp">
            <i:InvokeCommandAction Command="{Binding KeyUpCommand}"
                                   PassEventArgsToCommand="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>

    <Grid Background="GhostWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0">
            <rubiksCubeControls:RubiksCubeListControl DataContext="{Binding CubeListViewModel}"
                                                      Margin="80 40 40 40"
                                                      IsHitTestVisible="{Binding DataContext.IsCubeListControlEnabled, RelativeSource={RelativeSource AncestorType=Window}}" />
        </Viewbox>

        <Viewbox Grid.Column="1">
            <rubiksCubeControls:RubiksCubeControl DataContext="{Binding SelectedMainCubeViewModel}"
                                                  Margin="40"/>
        </Viewbox>

        <Viewbox Grid.Column="2">
            <buttonControls:ButtonGroupControl DataContext="{Binding ButtonGroupViewModel}"
                                               Margin="40 40 80 40"
                                               IsHitTestVisible="{Binding DataContext.IsButtonGroupControlEnabled, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Viewbox>
    </Grid>
</Window>