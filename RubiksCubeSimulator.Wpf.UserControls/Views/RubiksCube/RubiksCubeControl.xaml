<UserControl x:Class="RubiksCubeSimulator.Wpf.UserControls.Views.RubiksCube.RubiksCubeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cubeViewModels="clr-namespace:RubiksCubeSimulator.Wpf.UserControls.ViewModels.RubiksCube"
             xmlns:cubeControls="clr-namespace:RubiksCubeSimulator.Wpf.UserControls.Views.RubiksCube"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=cubeViewModels:RubiksCubeViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="200" d:DesignWidth="200">

    <Viewbox>
        <Canvas Height="165" Width="165">
            <cubeControls:RubiksCubeFaceControl Width="100" Height="100"
                                                DataContext="{Binding UpFaceViewModel}"
                                                Canvas.Right="82.5" Canvas.Bottom="100">

                <cubeControls:RubiksCubeFaceControl.RenderTransform>
                    <TransformGroup>
                        <RotateTransform CenterX="100" CenterY="100" Angle="45"/>

                        <ScaleTransform CenterX="100" CenterY="100"
                                        ScaleX="1.166726188" ScaleY="0.459619407" />
                    </TransformGroup>
                </cubeControls:RubiksCubeFaceControl.RenderTransform>
            </cubeControls:RubiksCubeFaceControl>

            <cubeControls:RubiksCubeFaceControl Width="100" Height="100"
                                                DataContext="{Binding RightFaceViewModel}"
                                                Canvas.Left="82.5" Canvas.Bottom="0">

                <cubeControls:RubiksCubeFaceControl.RenderTransform>
                    <TransformGroup>
                        <SkewTransform CenterX="0" CenterY="100"
                                       AngleX="0" AngleY="-18" />

                        <ScaleTransform ScaleX="0.825" ScaleY="1" />
                    </TransformGroup>
                </cubeControls:RubiksCubeFaceControl.RenderTransform>

            </cubeControls:RubiksCubeFaceControl>

            <cubeControls:RubiksCubeFaceControl Width="100" Height="100"
                                                DataContext="{Binding LeftFaceViewModel}"
                                                Canvas.Left="0" Canvas.Bottom="0">

                <cubeControls:RubiksCubeFaceControl.RenderTransform>
                    <TransformGroup>
                        <SkewTransform CenterX="100" CenterY="100"
                                       AngleX="0" AngleY="18" />

                        <ScaleTransform ScaleX="0.825" ScaleY="1" />
                    </TransformGroup>
                </cubeControls:RubiksCubeFaceControl.RenderTransform>
            </cubeControls:RubiksCubeFaceControl>
        </Canvas>
    </Viewbox>
</UserControl>