<UserControl x:Class="RubiksCubeSimulator.Wpf.UserControls.Views.RubiksCube.RubiksCubeListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cubeViewModels="clr-namespace:RubiksCubeSimulator.Wpf.UserControls.ViewModels.RubiksCube"
             xmlns:cubeControls="clr-namespace:RubiksCubeSimulator.Wpf.UserControls.Views.RubiksCube"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=cubeViewModels:RubiksCubeListViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="800" d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary Source="/RubiksCubeSimulator.Wpf.UserControls;component/Resources/MaterialDesignThemes.xaml" />
    </UserControl.Resources>

    <GroupBox Header="Rubik's Cubes">
        <GroupBox.HeaderTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding}"
                           FontSize="36"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"/>
            </DataTemplate>
        </GroupBox.HeaderTemplate>
        
        <ListBox ItemsSource="{Binding CubeViewModels}"
                 SelectedItem="{Binding SelectedCubeViewModel, Mode=TwoWay}"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding CubeDimension, StringFormat={}{0}x{0}}"
                                   FontSize="24"
                                   FontFamily="Roboto"
                                   HorizontalAlignment="Center"/>

                        <cubeControls:RubiksCubeControl DataContext="{Binding}"
                                                        Margin="7.5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </GroupBox>
</UserControl>
