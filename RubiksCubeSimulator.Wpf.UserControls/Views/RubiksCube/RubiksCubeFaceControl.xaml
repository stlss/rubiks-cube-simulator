<UserControl x:Class="RubiksCubeSimulator.Wpf.UserControls.Views.RubiksCube.RubiksCubeFaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cubeViewModels="clr-namespace:RubiksCubeSimulator.Wpf.UserControls.ViewModels.RubiksCube"
             xmlns:cubeViews="clr-namespace:RubiksCubeSimulator.Wpf.UserControls.Views.RubiksCube"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=cubeViewModels:RubiksCubeFaceControlViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="150" d:DesignWidth="150">

    <ItemsControl ItemsSource="{Binding StickerViewModels}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Rows="{Binding Dimension}"
                             Columns="{Binding Dimension}" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border BorderBrush="Black"
                        BorderThickness="{Binding DataContext.BorderThickness, RelativeSource={RelativeSource AncestorType=ItemsControl}}">

                    <cubeViews:RubiksCubeStickerControl DataContext="{Binding}" />
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>